<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tasks</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
  <div class="main w-full min-h-screen bg-zinc-900">
    <div class="form p-10 text-white">
      <form action="/create" method="POST">
        <!-- Fixed typo in 'tittle' to 'title' -->
        <input type="text" name="title" placeholder="Title goes here" required class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800 text-white">
        
        <textarea name="details" placeholder="Write your detail here" required class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800 text-white mt-2"></textarea>
        
        <input type="submit" value="Create Task" class="text-white mt-2 bg-blue-600 px-5 py-2 rounded-md cursor-pointer hover:bg-blue-700">
      </form>
    </div>

    <div class="tasks flex flex-wrap gap-3 p-10">
      <% if (files && files.length > 0) { %>
        <% files.forEach(function(file) { %>
          <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
            <h1 class="text-white text-2xl truncate"><%= file %></h1>
            <div class="flex w-full justify-between items-center mt-3">
              <a class="text-blue-500 inline-block " href="/Files/<%= file %>" target="_blank">Read More</a>
            <a class="text-zinc-300" href="/edit/<%= file%> ">edit filename</a>
            </div>
            
          </div>
        <% }); %>
      <% } else { %>
        <h3 class="text-zinc-600">No tasks yet.</h3>
      <% } %>
    </div>
  </div>
</body>
</html>
